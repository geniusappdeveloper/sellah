<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_product"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_115sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/carlogo" />


            <ImageButton
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="bottom"
                android:id="@+id/wish_remove_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/heart"/>


            <ImageView
                android:id="@+id/btn_option"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="right"
                android:src="@drawable/option_icon"
                android:tint="@color/colorWhite"/>
            <ImageView
                android:id="@+id/img_featured"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                android:src="@drawable/featured_png"
                android:visibility="gone"/>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:orientation="horizontal">

            <!-- time no need now -->
            <TextView
                android:visibility="gone"
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="end|bottom"
                android:textColor="@color/colorGrey"
                android:text="2 hrs ago"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAlignment="textEnd" />


            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/text_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Wolswage polo"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_birthday"
                android:layout_marginRight="@dimen/_2sdp"
                android:paddingRight="@dimen/_1sdp"
                android:text="S$"
                android:id="@+id/ss"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:textColor="@color/colorRed"
                android:layout_toRightOf="@+id/ss"
                android:id="@+id/cake_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_birthday"
                android:layout_marginRight="@dimen/_1sdp"
                android:paddingRight="@dimen/_1sdp"
                tools:text="1,999.99"
                android:textSize="@dimen/_10sdp"
                />


        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>