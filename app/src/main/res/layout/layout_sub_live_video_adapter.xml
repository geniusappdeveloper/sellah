<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_grid_layout"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_4sdp"
            android:id="@+id/cv_product_view"
            app:cardPreventCornerOverlap="true"
            >
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/product_stream_img" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text=" Live "
                    android:padding="@dimen/_3sdp"
                    android:textColor="#fff"
                    android:background="@drawable/live_btn_bg"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="01:24"
                    android:padding="@dimen/_3sdp"
                    android:textColor="#fff"
                    android:background="@drawable/live_btn_bg"
                    android:textSize="@dimen/_12sdp" />

                <!--invisible due to new changes -->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.7"
                    android:background="@drawable/round_black_live"
                    >
                    <ImageView
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/views_eye"
                        android:padding="@dimen/_1sdp"/>
                    <TextView
                        android:id="@+id/txt_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textSize="@dimen/_8sdp"
                       android:text="0"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play_icon"
                    android:id="@+id/videoview_categories_play" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_below="@+id/cv_product_view"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:orientation="horizontal">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_title_live"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_below="@+id/Click">
                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:text="Coaching for business"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_by_live"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_below="@+id/img_title_live">
                    <TextView
                        android:id="@+id/txt_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:text="By "/>
                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/txt_by"
                        android:text="John"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

