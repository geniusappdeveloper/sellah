<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/vp_root"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="#604d9c"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <RelativeLayout
            android:background="@drawable/credit_card_back"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">
        <TextView
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/vp_onnewcardnumber"
            android:textColorHint="#fff"
            android:textColor="@color/colorWhite"
            android:hint="**** **** **** *****"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/_15sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/vp_onnewcardholdername"
            android:textColorHint="#fff"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/vp_onnewcardnumber"
            android:hint="Card holder's name here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:id="@+id/vp_onnewcard_expire"
            android:textColorHint="#fff"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/vp_onnewcardholdername"
            android:hint="MM/YY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/_15sdp"

            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/vp_onnewcard_cvv"
            android:textColorHint="#fff"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/vp_onnewcardholdername"
            android:hint="***"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>






</RelativeLayout>
