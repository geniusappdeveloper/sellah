<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/_8sdp"

    app:cardElevation="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/review_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Review"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate_txt"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Please rate your last transaction with jane?"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/_12sdp" />

        <RatingBar
            android:id="@+id/rtB_rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:isIndicator="false"
            android:rating="1"
            android:theme="@style/RatingBar" />


        <TextView
            android:id="@+id/txt_testimonial"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtB_rating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Testimonial"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/edt_testimonials"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_testimonial"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/edit_text_border"
            android:gravity="top"
            android:hint="Can you tell us more about it?"
            android:minLines="5"
            android:maxLines="5"
            android:padding="6dp"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btn_submit_review"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_below="@+id/edt_testimonials"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_red_border"
            android:gravity="center"
            android:text="Submit Review"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>
</android.support.v7.widget.CardView>