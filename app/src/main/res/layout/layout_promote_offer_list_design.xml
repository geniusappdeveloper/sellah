<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_root"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_offer_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"

            android:text="S$ 420.55 "
            android:textColor="#000"
            android:textSize="@dimen/_18sdp" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
           >

            <TextView
                android:id="@+id/txt_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="Monthly"
                android:gravity="left"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_below="@+id/txt_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/colorGrey"
                android:text="No. of clicks"
                android:gravity="left"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/txt_offer_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="84 days"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_below="@+id/txt_offer_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:text="Validity"
                android:gravity="right"
                android:textSize="@dimen/_12sdp" />




        </RelativeLayout>


    </LinearLayout>
</LinearLayout>