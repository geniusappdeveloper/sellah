<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_grid_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_190sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_4sdp"
        android:elevation="@dimen/_3sdp"
        android:id="@+id/cv_product_view"
        app:cardPreventCornerOverlap="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Click">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/videoview_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/subcat_stream_img" />
            <!--   <ImageView
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="@dimen/_30sdp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/play_icon"
                   android:id="@+id/videoview_categories_play" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=" Live "
                android:padding="@dimen/_3sdp"
                android:textColor="#fff"
                android:background="@drawable/live_btn_bg"
                android:textSize="@dimen/_12sdp" />
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/play_icon"
                android:id="@+id/videoview_categories_play" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="01:24"
                android:padding="@dimen/_3sdp"
                android:textColor="#fff"
                android:background="@drawable/live_btn_bg"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <TextView
        android:paddingTop="@dimen/_3sdp"
        android:id="@+id/lv_product_detail1"
        android:layout_below="@+id/cv_product_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cute tosca bed sheet!"
        android:textColor="#000"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/lv_product_detail2"
        android:layout_below="@+id/lv_product_detail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by refinery13"
        android:textColor="#9d9d9d"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>

