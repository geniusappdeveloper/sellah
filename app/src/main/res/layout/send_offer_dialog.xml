<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:focusableInTouchMode="true"
    android:background="@drawable/round_border_testemonialheader"
    android:padding="@dimen/_12sdp">

    <RelativeLayout
        android:elevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Send an Offer"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />



        <ImageView
            android:id="@+id/btn_cancel"
            android:tint="#c0c0c0"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="9dp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/cross_icon"
            android:visibility="visible" />

    </RelativeLayout>





    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="#adadad"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:id="@+id/il_add_price"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_black"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp">

        <EditText
             android:background="@null"
            android:id="@+id/edt_add_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:hint="Jeans"
            android:paddingLeft="@dimen/_5sdp"
            android:inputType="text"
            android:singleLine="true"
            android:layout_margin="@dimen/_4sdp"
            android:textColorHint="@color/colorGrey"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Price"
        android:textColor="#adadad"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:id="@+id/il_add_quantity"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_black"
        android:textColorHint="@color/colorBlack"
        android:layout_marginRight="@dimen/_3sdp"
        >

        <EditText
            android:id="@+id/edt_add_price_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@null"
            android:hint="S$1,799.00"
            android:inputType="number"
            android:singleLine="true"
            android:paddingLeft="@dimen/_5sdp"
            android:textColorHint="@color/colorGrey"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/lin_send_offer_dialog"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_33sdp"
            android:drawSelectorOnTop="true"
            android:id="@+id/price_rec_send_dialog"
            android:hint="You will recieved S$ 1718.35"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:textSize="@dimen/_12sdp"/>

        <ImageView
            android:padding="@dimen/_10sdp"
            android:src="@drawable/faq"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_33sdp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_sendOffer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/signIn"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_red_border_testimonial"
            android:gravity="center"
            android:text="Send Offer"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>


</LinearLayout>