<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="3"
    android:paddingLeft="@dimen/_3sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/carlogo"
        android:id="@+id/img_user"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_4sdp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/_200sdp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorRed"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardUseCompatPadding="true">
        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorRed"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/img_pin"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:layout_gravity="top|end"
                android:padding="@dimen/_4sdp"
                android:visibility="visible"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/pined_icon"
                android:background="@drawable/pined_msg_bg"
              />
            <RelativeLayout
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lin_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Title :- "
                        android:maxLines="2"
                        android:textSize="@dimen/_12sdp"
                        android:maxWidth="@dimen/_185sdp"/>
                    <TextView
                        android:layout_below="@+id/txt_Title"
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Category :-"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp"
                        android:maxWidth="@dimen/_195sdp"/>
                    <TextView
                        android:layout_below="@+id/txt_category"
                        android:id="@+id/txt_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Description :- "
                        android:textSize="@dimen/_12sdp"
                        android:maxWidth="@dimen/_195sdp"/>

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
       <!-- <ImageView
            android:id="@+id/img_pin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_gravity="top"
            android:padding="@dimen/_3sdp"
            android:visibility="visible"
            android:src="@drawable/unpined_icon"
            android:background="@drawable/pined_msg_bg"
            />-->
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="20:40"
        android:minWidth="@dimen/_30sdp"
        android:maxWidth="@dimen/_30sdp"
        android:id="@+id/txt_msg_time"
        android:layout_marginLeft="@dimen/_3sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textSize="@dimen/_10sdp"/>
</LinearLayout>