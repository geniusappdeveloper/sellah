<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_root"
    android:background="@color/colorWhite"
   >

    <android.support.v4.widget.DrawerLayout xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000"
        tools:context=".view.activities.MainActivity"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/rel_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--            <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@color/colorWhite"
                            android:minHeight="?attr/actionBarSize" />-->

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <RelativeLayout
                    android:id="@+id/rl_menu"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:visibility="visible"

                    >

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sellah_icon_white"
                        android:tint="@color/colorRed"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/notification_relativelayout"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:visibility="visible"

                    >

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/engagement_icon"
                        android:tint="@color/colorRed"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_reset_search"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/close_search"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/back_icon_new"
                        />
                </RelativeLayout>

                <!--   <RelativeLayout
                       android:id="@+id/relative_back"
                       android:layout_width="@dimen/_40sdp"
                       android:layout_height="@dimen/_40sdp"
                       android:gravity="center"
                       android:visibility="gone">

                       <ImageView
                           android:id="@+id/img_back"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:src="@drawable/back_arrow" />
                   </RelativeLayout>-->


                <RelativeLayout
                    android:id="@+id/rl_filter"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_16sdp"
                       android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/filter_icon2" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_search_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:tint="@color/colorBlack"
                        android:src="@drawable/search_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_search"
                    android:animateLayoutChanges="true"
                    android:layout_width="@dimen/_225sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_edittext_border">
<!--
                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:singleLine="true"
                        android:hint=" Search Sellah..."
                        android:imeOptions="actionSearch"
                        android:paddingLeft="@dimen/_30sdp"
                        android:textSize="@dimen/_14sdp" />-->
                    <AutoCompleteTextView
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:singleLine="true"
                        android:hint=" Search Sellah..."
                        android:imeOptions="actionSearch"
                        android:paddingLeft="@dimen/_30sdp"
                        android:textSize="@dimen/_14sdp"
                        android:ems="10"
                        android:inputType="textAutoComplete|textAutoCorrect"
                        android:dropDownAnchor="@id/relativeLayout"
                        android:completionThreshold="3"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:dropDownVerticalOffset="10dp"
                        >

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/search_icon" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Sell"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_chevron_left_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_option"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/options"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/option_icon" />
            </RelativeLayout>

            <!-- <RelativeLayout
                 android:id="@+id/rl_title"
                 android:layout_width="@dimen/_220sdp"
                 android:layout_height="@dimen/_30sdp"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:visibility="gone">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@null"
                     android:gravity="center_horizontal"
                     android:text="Golf Plus 2005"
                     android:textColor="@color/colorBlack"
                     android:textSize="@dimen/_14sdp" />

             </RelativeLayout>-->


            <View
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@+id/relativeLayout"
                android:background="@color/colorGrey" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomNavigation"
                android:layout_below="@+id/top_view" />


            <RelativeLayout
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:paddingTop="@dimen/_1sdp"
                android:background="@drawable/bottom_navigation_shadow"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/li_bottom_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/homeLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/homeImage"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/home_icon" />

                        <TextView
                            android:id="@+id/homeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Home"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liveLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/liveImage"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/live_icon" />

                        <TextView
                            android:id="@+id/liveText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/live"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/sellLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sellImage"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/_1sdp"
                            android:src="@drawable/sell_icon" />

                        <TextView
                            android:id="@+id/sellText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/sell"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/notification_img"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:src="@drawable/noti_red_icon_round"
                            android:tint="@color/colorRed"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp" />

                        <LinearLayout
                            android:id="@+id/notificationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/notificationImage"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/engagement_icon" />

                            <TextView
                                android:id="@+id/notificationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/notification"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/profile_icon" />

                        <TextView
                            android:id="@+id/profileText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/profile"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorRed"
            android:theme="@style/NavigationView"
            android:visibility="visible"
            app:insetForeground="#4000"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <include
                    android:id="@+id/headerView"
                    layout="@layout/nav_header" />

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/nav_info"
                    android:layout_below="@+id/headerView"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_22sdp">

                        <ExpandableListView
                            android:id="@+id/expandableListView"
                            android:layout_width="@dimen/_160sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorRed"
                            android:divider="@null"
                            android:groupIndicator="@null"
                            android:nestedScrollingEnabled="false" />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Support"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/nav_contact_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Contact Us"
                            android:textColor="@color/colorWhite" />


                        <TextView
                            android:id="@+id/nav_about_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="About Us"
                            android:textColor="@color/colorWhite" />


                        <TextView
                            android:id="@+id/nav_legal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Legal"
                            android:textColor="@color/colorWhite" />

                        <TextView
                            android:id="@+id/nav_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:text="Logout"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </ScrollView>
                <TextView
                    android:id="@+id/nav_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|left"
                    android:paddingLeft="@dimen/_22sdp"
                    android:text="© 2018 Sellah v8.1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>