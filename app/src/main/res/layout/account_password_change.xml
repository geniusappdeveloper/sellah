<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    tools:context=".view.activities.LoginActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:padding="@dimen/_12sdp"
        tools:context=".view.activities.LoginActivity">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="5dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                tools:context=".view.activities.LoginActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_8sdp"
                        android:text="Please set your new Password"
                        android:textAllCaps="false"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_15sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/signUp_relative"
                    android:background="@color/colorLGrey" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:text="Current Password"
                                android:textSize="@dimen/_13sdp" />

                            <com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout
                                android:id="@+id/il_curr_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <EditText
                                    android:id="@+id/edt_current_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/edit_text_border"
                                    android:importantForAutofill="no"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textColorHint="@color/colorLGrey"
                                    android:textSize="@dimen/_12sdp" />
                            </com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/etSignup_email"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="New Password"
                                android:textSize="@dimen/_13sdp" />

                            <com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout
                                android:id="@+id/il_new_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <EditText
                                    android:id="@+id/edt_new_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:autoText="false"
                                    android:background="@drawable/edit_text_border"
                                    android:importantForAutofill="no"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textColorHint="@color/colorLGrey"
                                    android:textSize="@dimen/_12sdp" />

                            </com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Confirm Password"
                                android:textSize="@dimen/_13sdp" />

                            <com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout
                                android:id="@+id/il_confirm_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <EditText
                                    android:id="@+id/edt_confirm_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/edit_text_border"
                                    android:importantForAutofill="no"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_12sdp" />
                            </com.app.admin.sellah.view.CustomViews.NoChangingBackgroundTextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Enter OTP received on your registered mobile number"
                                android:textSize="@dimen/_13sdp" />

                            <com.goodiebag.pinview.Pinview
                                android:id="@+id/otp_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/li_resend"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:cursorVisible="true"
                                app:inputType="number"
                                app:password="false"
                                app:pinBackground="@drawable/drawable_pin_view"
                                app:pinHeight="@dimen/_35sdp"
                                app:pinLength="4"
                                app:pinWidth="@dimen/_28sdp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginRight="@dimen/_12sdp">

                                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                                    android:id="@+id/pb_time"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/li_mobile"
                                    android:layout_marginRight="@dimen/_12sdp"
                                    android:layout_toLeftOf="@+id/txt_time_remaining"
                                    app:mpb_progressStyle="horizontal" />


                                <TextView
                                    android:id="@+id/txt_time_remaining"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/li_mobile"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="0m 00s" />
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/li_mobile"
                                android:id="@+id/li_resend"
                                android:gravity="right|center"
                                android:clickable="false"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:visibility="gone"
                                >
                                <ImageView
                                    android:id="@+id/img_resend"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_below="@+id/txt_time_remaining"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/resen_sms_icon"
                                    />
                                <TextView
                                    android:layout_toRightOf="@+id/img_resend"
                                    android:id="@+id/txt_resend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_time_remaining"
                                    android:textColor="@color/colorBlack"
                                    android:text="Resend OTP"
                                    android:textSize="@dimen/_12sdp"/>
                            </LinearLayout>
                            <Button
                                android:id="@+id/btn_change"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@id/signIn"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="@drawable/round_red_border"
                                android:gravity="center"
                                android:text="Change"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>
                    </ScrollView>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/round_red_border"
        android:padding="@dimen/_6sdp"
        android:rotation="45"
        android:src="@drawable/add_plus_button" />
</RelativeLayout><!--
