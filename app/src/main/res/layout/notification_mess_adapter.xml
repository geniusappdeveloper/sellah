<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="@dimen/_3sdp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/profile"/>


    <RelativeLayout
        android:id="@+id/rel_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/_8sdp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/personHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Marc farmer"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"/>

        <ImageView
            android:id="@+id/img_new_entry"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:src="@drawable/red_dot_icon"
            android:layout_toRightOf="@id/personHeading"/>

        <TextView
            android:id="@+id/personSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:layout_toLeftOf="@+id/txt_time"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorGrey"
            android:layout_below="@id/personHeading"
            android:text="Advertisng Outdoors"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/txt_time"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:singleLine="true"
            android:textColor="@color/colorGrey"
            android:layout_below="@id/personHeading"
            android:text="00:00"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/textOrder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18sdp"
            android:text="Order Processing"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:visibility="visible"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#EEC12D"
            android:layout_alignParentRight="true" />
    </RelativeLayout>




</LinearLayout>