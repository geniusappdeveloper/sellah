<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_1sdp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/third_image"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_140sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/carlogo" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_video_indicator"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_6sdp"
                    android:tint="@color/colorRed"
                    android:alpha="0.70"
                    android:visibility="gone"
                    app:tint="@color/colorWhite"
                    android:src="@drawable/video_indicator_icon"/>

                <TextView
                    android:id="@+id/img_featured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/_5sdp"
                    android:alpha="0.85"
                    android:background="@drawable/live_btn_bg"
                    android:padding="@dimen/_3sdp"
                    android:text="Featured"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:text="Wolswage polo"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txt_cost_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_name"
                    android:padding="@dimen/_2sdp"
                    android:paddingRight="@dimen/_1sdp"
                    android:text="S$"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txt_product_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_name"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_toRightOf="@+id/txt_cost_code"
                    android:ellipsize="end"
                    android:maxLength="15"
                    android:padding="@dimen/_2sdp"
                    android:paddingRight="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    tools:text="1,999.99" />

                <TextView
                    android:id="@+id/txt_promote_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_red_border"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="Promote"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>