<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel_stripe_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_connect_stripe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to stripe"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/txt_connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_connect_stripe"
            android:maxWidth="@dimen/_200sdp"
            android:text="@string/connect_to_stripe"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            android:visibility="visible"/>

        <com.app.admin.sellah.controller.stripe.StripeButton
            android:id="@+id/btn_stripe_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/_8sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorLGrey"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/rel_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_card_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Payment"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/edt_card_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="ADD"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/bankImg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/txt_card_detail"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/visa_card_icon"
            android:visibility="gone" />

        <TextView

            android:id="@+id/txt_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_detail"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/bankImg"
            android:paddingLeft="@dimen/_5sdp"
            android:text="ending in 8765"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_cards"
            android:layout_marginTop="@dimen/_3sdp"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_detail" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorLGrey"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/banl_acct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Account"

            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/txt_edit_bank_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="EDIT"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dbs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="DBS Savings Plus"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="104-62394-0"
        android:textSize="@dimen/_12sdp"

        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorLGrey" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Sellah Wallet"
        android:textColor="@color/colorBlack"

        android:textSize="@dimen/_13sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Coming soon..."
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorLGrey" />


</LinearLayout>
</ScrollView>