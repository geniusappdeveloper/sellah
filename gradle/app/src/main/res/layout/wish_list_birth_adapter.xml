<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_icon_img" />

            <TextView
                android:id="@+id/text_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/img_product"
                android:text="Birthday Cakes"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />
            <ImageButton
                android:id="@+id/wish_remove_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/remove_item_icon"/>

            <TextView
                android:id="@+id/cake_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_birthday"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/img_product"
                android:text="S$28"
                android:textSize="@dimen/_13sdp"
                android:textColor="#7bd9be" />

            <ImageView
                android:id="@+id/mess_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/cake_cost"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_toRightOf="@+id/img_product"
                android:src="@drawable/mess_chat_icon" />

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/cake_cost"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_toRightOf="@+id/mess_image"
                android:src="@drawable/share_icon" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_toRightOf="@+id/share_image"
                android:gravity="end|bottom"
                android:layout_below="@+id/cake_cost"
                android:textColor="@color/colorGrey"
                android:text="2 hrs ago"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAlignment="textEnd" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>