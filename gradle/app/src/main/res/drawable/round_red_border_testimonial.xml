<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#de8888"
                android:endColor="#de8888"
                android:angle="270" />

            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#E35252"
                android:startColor="#E35252"
                android:angle="270" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorRed"
                android:startColor="@color/colorRed"
                android:angle="270" />
               <corners
                   android:radius="3dp" />

        </shape>
    </item>



</selector>
